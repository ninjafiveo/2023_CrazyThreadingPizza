<Window x:Class="CrazyThreadingPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrazyThreadingPizza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Start_BTN" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="#FF42FF00" Width="300" Height="150" BorderBrush="Black" FontSize="24" Click="Start_BTN_Click"/>
        <Button x:Name="Stop_BTN" Content="Stop" HorizontalAlignment="Left" Margin="490,10,0,0" VerticalAlignment="Top" Background="Red" Width="300" Height="150" BorderBrush="Black" FontSize="24" Click="Stop_BTN_Click"/>

    </Grid>
</Window>
